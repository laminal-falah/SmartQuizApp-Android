<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvKuis"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/round_view_images"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_kuis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxEms="2"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/app_name"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_cover" />

        <TextView
            android:id="@+id/tv_soal_kuis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/txtSoalKuis"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_kuis" />

        <TextView
            android:id="@+id/tv_durasi_kuis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/txtDurasiKuis"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_kuis" />

        <TextView
            android:id="@+id/tv_hrg_kuis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/app_name"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ratingBar_kuis"
            app:layout_constraintTop_toBottomOf="@+id/tv_durasi_kuis" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingBar_kuis"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5"
            android:scaleX=".5"
            android:scaleY=".5"
            android:stepSize="0.1"
            android:theme="@style/RatingBar"
            android:transformPivotX="5dp"
            android:transformPivotY="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_soal_kuis" />

        <TextView
            android:id="@+id/tv_author_kuis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/app_name"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar_kuis" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.card.MaterialCardView>